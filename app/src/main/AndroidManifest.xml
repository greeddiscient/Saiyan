<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.djurus.saiyan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.djurus.djurus.saiyan.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.djurus.djurus.saiyan.NewQuestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.djurus.djurus.saiyan.QuestDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.djurus.djurus.saiyan.QuestHistoryActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.djurus.djurus.saiyan.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.djurus.djurus.saiyan.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme" />
        <activity android:name="com.djurus.djurus.saiyan.ZzzActivity"></activity>
    </application>

</manifest>